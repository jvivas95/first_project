{% extends 'base.html.twig' %}

{% block title %}Tarea{% endblock %}

{% block body %}
    <h1>Tarea</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tarea.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ tarea.titulo }}</td>
            </tr>
            <tr>
                <th>Descipcion</th>
                <td>{{ tarea.descipcion }}</td>
            </tr>
            <tr>
                <th>Completado</th>
                <td>{{ tarea.completado ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ tarea.fecha ? tarea.fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tarea_index') }}">back to list</a>

    <a href="{{ path('app_tarea_edit', {'id': tarea.id}) }}">edit</a>

    {{ include('tarea/_delete_form.html.twig') }}
{% endblock %}
